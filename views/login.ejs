<%- include('partials/header') %>
<div class="d-flex align-items-center justify-content-center min-vh-100 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4" data-aos="zoom-in">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex p-3 mb-3">
                        <i class="fas fa-fingerprint fa-2x"></i>
                    </div>
                    <h3 class="fw-bold">Welcome Back</h3>
                    <p class="text-muted small">Masuk untuk mengelola bot Anda</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger border-0 shadow-sm rounded-3 small mb-4">
                        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                    </div>
                <% } %>

                <ul class="nav nav-pills nav-fill mb-4 bg-light rounded-pill p-1" role="tablist">
                    <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#login-std">User</button></li>
                    <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#login-sseo">SSEO</button></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="login-std">
                        <form action="/login" method="POST">
                            <input type="hidden" name="loginAs" id="loginRole" value="user">
                            <div class="form-floating mb-3">
                                <input type="email" name="email" class="form-control bg-light border-0" id="emailInput" placeholder="name@example.com" required>
                                <label>Email Address</label>
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3" id="emailStatus"></span>
                            </div>
                            <div class="form-floating mb-4 position-relative">
                                <input type="password" name="password" class="form-control bg-light border-0" id="passInput" placeholder="Password" required>
                                <label>Password</label>
                                <i class="fas fa-eye text-muted position-absolute top-50 end-0 translate-middle-y me-3 cursor-pointer" onclick="togglePass('passInput', this)"></i>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" onchange="document.getElementById('loginRole').value = this.checked ? 'admin' : 'user'">
                                    <label class="form-check-label small">Admin Mode</label>
                                </div>
                                <a href="#" class="text-decoration-none small">Lupa Sandi?</a>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 rounded-pill py-3 fw-bold shadow-sm mb-3">Masuk Sekarang</button>
                        </form>

                        <!-- Social Login Section -->
                        <div class="position-relative text-center mb-3">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 text-muted small">Or continue with</span>
                        </div>

                        <div class="row g-2">
                            <div class="col-6">
                                <a href="/auth/spotify" class="btn btn-light border w-100 rounded-pill py-2 fw-bold d-flex align-items-center justify-content-center gap-2 hover-scale">
                                    <i class="fab fa-spotify text-success fs-5"></i> Spotify
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/auth/github" class="btn btn-light border w-100 rounded-pill py-2 fw-bold d-flex align-items-center justify-content-center gap-2 hover-scale">
                                    <i class="fab fa-github text-dark fs-5"></i> GitHub
                                </a>
                            </div>
                        </div>
                        <!-- End Social Login -->

                    </div>

                    <div class="tab-pane fade" id="login-sseo">
                        <form action="/login-sseo" method="POST">
                            <div class="form-floating mb-4">
                                <input type="text" name="sseoToken" class="form-control bg-light border-0 font-monospace" placeholder="TOKEN" required>
                                <label>SSEO Token</label>
                            </div>
                            <button class="btn btn-dark w-100 rounded-pill py-3 fw-bold"><i class="fas fa-bolt me-2"></i>Login Instan</button>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <span class="text-muted small">Belum punya akun? <a href="/register" class="text-primary fw-bold text-decoration-none">Daftar</a></span>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
<script>
    const emailInput = document.getElementById('emailInput');
    const emailStatus = document.getElementById('emailStatus');
    
    emailInput.addEventListener('keyup', async function() {
        if(this.value.length > 5) {
            const res = await fetch('/api/check-email', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ email: this.value }) });
            const data = await res.json();
            if(!data.available) emailStatus.innerHTML = '<i class="fas fa-check-circle text-success"></i>'; 
            else emailStatus.innerHTML = '<i class="fas fa-times-circle text-danger"></i>';
        } else emailStatus.innerHTML = '';
    });

    function togglePass(id, icon) {
        const input = document.getElementById(id);
        if(input.type === "password") { input.type = "text"; icon.classList.replace('fa-eye', 'fa-eye-slash'); }
        else { input.type = "password"; icon.classList.replace('fa-eye-slash', 'fa-eye'); }
    }
</script>
</body>
</html>
