<%- include('partials/header') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<style>
    .tutorial-card { transition: transform 0.3s ease, box-shadow 0.3s ease; }
    .tutorial-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
    .step-item { border-left: 3px solid var(--primary); }
</style>

<div class="container py-5">
    <div class="text-center mb-5" data-aos="fade-down">
        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill mb-3 fw-bold">DOCUMENTATION</span>
        <h2 class="fw-bold display-5 mb-3">Tutorial Center</h2>
        <p class="text-muted lead mx-auto" style="max-width: 600px;">
            Panduan lengkap penggunaan fitur Fiona Bot Panel mulai dari dasar hingga mahir.
        </p>
    </div>

    <% if (tutorials.length === 0) { %>
        <div class="text-center py-5" data-aos="fade-up">
            <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-2130362-1800926.png" width="250" class="opacity-75 mb-3">
            <h5 class="text-muted fw-bold">Belum ada tutorial tersedia.</h5>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% tutorials.forEach((t, i) => { %>
            <div class="col-md-6 col-lg-4 tutorial-item" style="opacity: 0;">
                <div class="card border-0 shadow-sm h-100 rounded-4 overflow-hidden tutorial-card bg-white">
                    <div class="position-relative">
                        <% if(t.thumbnail) { %>
                            <img src="<%= t.thumbnail %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-book-open fa-3x text-secondary opacity-25"></i>
                            </div>
                        <% } %>
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-white text-dark shadow-sm px-3 py-2 rounded-pill fw-bold">
                                <i class="fas fa-tag me-1 text-primary"></i><%= t.category %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body p-4 d-flex flex-column">
                        <h5 class="fw-bold text-dark mb-2"><%= t.title %></h5>
                        <p class="text-muted small mb-4 flex-grow-1" style="line-height: 1.6;"><%= t.description %></p>
                        <button class="btn btn-primary w-100 rounded-pill fw-bold py-2 shadow-sm" data-bs-toggle="modal" data-bs-target="#tutoModal<%= t._id %>">
                            Baca Panduan <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="tutoModal<%= t._id %>" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0 rounded-4 shadow-lg">
                        <div class="modal-header border-0 pb-0">
                            <h5 class="fw-bold px-3 pt-3"><i class="fas fa-book me-2 text-primary"></i><%= t.title %></h5>
                            <button type="button" class="btn-close m-3" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body p-4">
                            <% if(t.youtubeUrl) { 
                                let embedUrl = t.youtubeUrl;
                                if (embedUrl.includes("watch?v=")) {
                                    embedUrl = embedUrl.replace("watch?v=", "embed/");
                                } else if (embedUrl.includes("youtu.be/")) {
                                    embedUrl = embedUrl.replace("youtu.be/", "www.youtube.com/embed/");
                                }
                            %>
                                <div class="ratio ratio-16x9 mb-4 rounded-4 overflow-hidden shadow-sm">
                                    <iframe src="<%= embedUrl %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            <% } %>
                            
                            <div class="bg-light p-4 rounded-4">
                                <h6 class="fw-bold mb-3 text-uppercase small text-muted ls-1">Langkah - Langkah</h6>
                                <div class="d-flex flex-column gap-3">
                                    <% t.steps.forEach((step, idx) => { %>
                                        <div class="d-flex bg-white p-3 rounded-3 border border-light step-item shadow-sm align-items-start">
                                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3 flex-shrink-0" style="width: 30px; height: 30px;">
                                                <%= idx + 1 %>
                                            </div>
                                            <div class="text-dark"><%- step.replace(/\n/g, '<br>') %></div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer border-0 pt-0 px-4 pb-4">
                            <button type="button" class="btn btn-light rounded-pill w-100 fw-bold" data-bs-dismiss="modal">Tutup</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        gsap.to(".tutorial-item", {
            duration: 0.8,
            opacity: 1,
            y: 0,
            stagger: 0.15,
            ease: "power3.out",
            yPercent: 20
        });
    });
</script>
<%- include('partials/footer') %>