<footer class="bg-white border-top py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="mb-0 text-muted small">&copy; <%= new Date().getFullYear() %> Fiona Bot Panel. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item me-3">
                            <a href="#" onclick="startTour(); return false;" class="text-decoration-none text-primary fw-bold small">
                                <i class="fas fa-flag me-1"></i>Start Tour
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://t.me/maverick_dar" target="_blank" class="text-decoration-none text-muted small">Support</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <div class="position-fixed bottom-0 end-0 p-3 mb-5 me-2" style="z-index: 1050; padding-bottom: 80px !important;">
        <button class="btn btn-primary rounded-circle shadow-lg p-3 hover-scale" onclick="startTour()" data-bs-toggle="tooltip" title="Panduan Pemula">
            <i class="fas fa-question fa-lg"></i>
        </button>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/driver.js@1.0.1/dist/driver.js.iife.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script>
        AOS.init({ duration: 800, once: true });

        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Check for Restart Status
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('status') === 'restarted') {
            Swal.fire({
                icon: 'success',
                title: 'Session Restarted',
                text: 'Sesi bot berhasil dimuat ulang!',
                timer: 3000,
                showConfirmButton: false
            });
            // Clean URL
            const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
            window.history.replaceState({path: newUrl}, '', newUrl);
        }

        const driver = window.driver.js.driver;
        const driverObj = driver({
            showProgress: true,
            animate: true,
            steps: [
                { popover: { title: 'Selamat Datang!', description: 'Mari kita pelajari cara menggunakan panel ini dengan cepat.' } },
                { element: '.fa-tachometer-alt', popover: { title: 'Dashboard', description: 'Halaman utama untuk memantau status bot dan server Anda.' } },
                { element: '#addBotBtn', popover: { title: 'Hubungkan Bot', description: 'Klik tombol ini untuk mendapatkan Kode Pairing WhatsApp.' } },
                { element: '.fa-server', popover: { title: 'Cloud Server', description: 'Buat server baru untuk menjalankan script bot 24 jam nonstop.' } },
                { element: '.fa-newspaper', popover: { title: 'News & Info', description: 'Dapatkan informasi update terbaru disini.' } },
                { element: '.fa-book', popover: { title: 'Tutorial', description: 'Bingung? Baca panduan lengkap penggunaan bot disini.' } },
                { element: '.fa-cog', popover: { title: 'Settings', description: 'Atur keamanan akun, notifikasi, dan token SSEO.' } },
                { popover: { title: 'Selesai!', description: 'Anda siap menggunakan Fiona Bot Panel. Selamat mencoba!' } }
            ]
        });

        function startTour() {
            driverObj.drive();
        }

        <% if(typeof user !== 'undefined' && user.newUserTour) { %>
            setTimeout(() => {
                driverObj.drive();
                fetch('/api/tour-complete', { method: 'POST' });
            }, 1000);
        <% } %>

        document.addEventListener('shown.bs.modal', function (event) {
            const activeElement = document.activeElement;
            if (activeElement) {
                activeElement.blur();
            }
        });
    </script>
</body>
</html>
