<%- include('partials/header') %>
<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-lg-8" data-aos="fade-up">
            <h4 class="fw-bold mb-4">Settings</h4>
            
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h6 class="fw-bold text-primary mb-3">Notifikasi</h6>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-0 fw-bold">Push Notifications</p>
                        <small class="text-muted">Terima notifikasi browser untuk berita & update.</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="pushNotifSwitch" style="width: 3em; height: 1.5em; cursor: pointer;">
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h6 class="fw-bold text-success mb-3">Keamanan</h6>
                <div class="mb-4 pb-3 border-bottom d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-0 fw-bold">2FA Authentication</p>
                        <small class="text-muted">Google Authenticator.</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="switch2fa" <%= user.twoFactorEnabled ? 'checked' : '' %> style="width: 3em; height: 1.5em; cursor: pointer;">
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-0 fw-bold">Password</p>
                        <small class="text-muted">Ubah kata sandi akun.</small>
                    </div>
                    <button class="btn btn-light rounded-pill px-4 fw-bold" data-bs-toggle="modal" data-bs-target="#changePassModal">Ubah</button>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h6 class="fw-bold text-warning mb-3">SSEO Access</h6>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <p class="mb-0 fw-bold">Status SSEO</p>
                        <small class="text-muted">Login menggunakan token.</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="switchSSEO" <%= user.sseoActive ? 'checked' : '' %> style="width: 3em; height: 1.5em; cursor: pointer;">
                    </div>
                </div>
                <% if(user.sseoActive) { %>
                    <div class="bg-light p-3 rounded-3 text-center border">
                        <small class="text-muted d-block mb-1">YOUR TOKEN</small>
                        <h5 class="font-monospace fw-bold m-0 user-select-all cursor-pointer" onclick="navigator.clipboard.writeText(this.innerText); Swal.fire('Copied')"><%= user.sseoToken %></h5>
                    </div>
                <% } %>
            </div>

        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="setup2faModal" tabindex="-1"><div class="modal-dialog modal-dialog-centered"><div class="modal-content rounded-4 border-0 p-3 text-center"><h5>Scan QR Code</h5><img id="qrCodeImg" width="200" class="my-3"><div class="input-group"><input type="text" id="verifyToken" class="form-control text-center"><button class="btn btn-primary" onclick="verify2fa()">Verify</button></div></div></div></div>
<div class="modal fade" id="changePassModal" tabindex="-1"><div class="modal-dialog modal-dialog-centered"><div class="modal-content rounded-4 border-0 p-4"><h5>Change Password</h5><form action="/settings/change-password" method="POST"><input type="password" name="currentPassword" class="form-control mb-2" placeholder="Current" required><input type="password" name="newPassword" class="form-control mb-2" placeholder="New" required><input type="password" name="confirmPassword" class="form-control mb-3" placeholder="Confirm" required><button class="btn btn-primary w-100 rounded-pill">Save</button></form></div></div></div>

<%- include('partials/footer') %>
<script>
    const switchSSEO = document.getElementById('switchSSEO');
    if(switchSSEO) {
        switchSSEO.addEventListener('change', async function() {
            if(this.checked) { await fetch('/settings/sseo/generate', {method:'POST'}); location.reload(); }
            else { await fetch('/settings/sseo/disable', {method:'POST'}); location.reload(); }
        });
    }
    const modal2fa = new bootstrap.Modal(document.getElementById('setup2faModal'));
    document.getElementById('switch2fa').addEventListener('change', function() {
        if(this.checked) fetch('/settings/2fa/generate', {method:'POST'}).then(r=>r.json()).then(d=>{ document.getElementById('qrCodeImg').src=d.qrCode; modal2fa.show(); });
        else if(confirm('Disable 2FA?')) fetch('/settings/2fa/disable', {method:'POST'}).then(()=>location.reload()); else this.checked = true;
    });
    function verify2fa() {
        fetch('/settings/2fa/enable', {method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({token:document.getElementById('verifyToken').value})})
        .then(r=>r.json()).then(d=> { if(d.success) location.reload(); else alert('Invalid Code'); });
    }
</script>
</body>
</html>
