<%- include('partials/header') %>
<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-lg-8" data-aos="fade-in">
            <a href="/<%= page %>" class="btn btn-light rounded-pill px-4 mb-4 fw-bold small"><i class="fas fa-arrow-left me-2"></i>Kembali</a>
            
            <span class="badge bg-primary mb-3"><%= post.tag %></span>
            <h1 class="fw-bold mb-3 display-6"><%= post.title %></h1>
            
            <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center text-primary fw-bold fs-5 me-3" style="width: 50px; height: 50px;">
                    <%= post.author.charAt(0) %>
                </div>
                <div>
                    <h6 class="fw-bold m-0"><%= post.author %></h6>
                    <small class="text-muted"><%= post.createdAt.toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></small>
                </div>
            </div>

            <% if(post.image) { %>
                <img src="<%= post.image %>" class="w-100 rounded-4 shadow-sm mb-5" data-aos="zoom-in">
            <% } %>

            <div class="article-content fs-5 text-secondary" style="line-height: 1.8; white-space: pre-wrap;">
                <%= post.content %>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
</body>
</html>
