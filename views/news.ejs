<%- include('partials/header') %>
<div class="container p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h4 class="fw-bold m-0 text-dark">News Room</h4>
            <p class="text-muted small m-0">Berita dan update terbaru seputar bot.</p>
        </div>
        <i class="fas fa-newspaper fa-2x text-primary opacity-25"></i>
    </div>

    <div class="row g-4">
        <% if(news.length === 0) { %>
            <div class="col-12 text-center py-5">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-2130362-1800926.png" width="200" class="opacity-50 mb-3">
                <p class="text-muted fw-bold">Belum ada berita.</p>
            </div>
        <% } else { %>
            <% news.forEach((n, i) => { %>
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="<%= i * 100 %>">
                <a href="/news/detail/<%= n._id %>" class="text-decoration-none">
                    <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden hover-scale">
                        <% if(n.image) { %>
                            <div style="height: 200px; overflow: hidden;">
                                <img src="<%= n.image %>" class="w-100 h-100" style="object-fit: cover;">
                            </div>
                        <% } else { %>
                            <div style="height: 200px; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-bell fa-3x text-secondary opacity-25"></i>
                            </div>
                        <% } %>
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3"><%= n.tag %></span>
                                <small class="text-muted" style="font-size: 11px;"><%= new Date(n.createdAt).toLocaleDateString('id-ID') %></small>
                            </div>
                            <h5 class="fw-bold text-dark mb-2" style="line-height: 1.4;"><%= n.title %></h5>
                            <p class="text-muted small mb-0" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                <%= n.content.substring(0, 120) %><%= n.content.length > 120 ? '...' : '' %>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>
